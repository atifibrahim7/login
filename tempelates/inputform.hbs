</table>


         <!-- Additional Questions Section -->
    <h4>2. Additional Questions</h4>
    <!-- Question: Did you live in more than one residence during last year? -->
    <label for="multipleResidence">Did you live in more than one residence during last year?</label>
    <input type="text" id="multipleResidence" name="multipleResidence" placeholder="Mention State Name">

    <!-- Question: Do you have an Identity Protection PIN issued by the IRS? -->
    <label for="identityProtectionPIN">Do you have an Identity Protection PIN issued by the IRS?</label>
    <select id="identityProtectionPIN" name="identityProtectionPIN">
        <option value="No">No</option>
        <option value="Yes">Yes</option>
    </select>

    <!-- PIN input field -->
    <div id="pinInput" style="display: none;">
        <label for="pin">Provide PIN</label>
        <input type="text" id="pin" name="pin" placeholder="Enter your PIN">
    </div>
    
    <!-- Question: Marital Status -->
    <label for="maritalStatus">Marital Status</label>
    <select id="maritalStatus" name="maritalStatus">
        <option value="Single">Single</option>
        <option value="Married">Married</option>
        <option value="HeadOfHousehold">Head of Household</option>
        <option value="Widow(er)">Widow(er)</option>
    </select>
    <!-- Conditional field for date of spouse's death if applicable -->
    <div id="dateOfSpouseDeathField" style="display: none;">
        <label for="dateOfSpouseDeath">Date of Spouse Death</label>
        <input type="date" id="dateOfSpouseDeath" name="dateOfSpouseDeath">
    </div>
    <label for="fileJointly">Will you file jointly?</label>
    <select id="fileJointly" name="fileJointly">
        <option value="Yes">Yes</option>
        <option value="No">No</option>
    </select>
    <!-- Question: Are You/Spouse considered legally blind on the last day of the tax year? -->
    <label for="legallyBlind">Are You/Spouse considered legally blind on the last day of the tax year?</label>
    <select id="legallyBlind" name="legallyBlind">
        <option value="Yes">Yes</option>
        <option value="No">No</option>
    </select>

    <h4>3. Dependents Information</h4>
    <!-- Question: Do you have any dependents? -->
    <label for="hasDependents">Do you have any dependents?</label>
    <select id="hasDependents" name="hasDependents">
        <option value="No">No</option>
        <option value="Yes">Yes</option>
    </select>

    <!-- Button to Add Dependent -->
    <button type="button" id="addDependentBtn" style="display: none;">Add Dependent</button>

     <!-- Table for Dependent Information -->
     <table id="dependentTable" style="display: none;">
         <thead>
             <tr>
                 <th>Name</th>
                 <th>Relationship</th>
                 <th>DOB</th>
                 <th>SSN</th>
                 <th>Resident Status</th>
                 <th>Months Lived with You</th>
                 <th>Disable (if)</th>
             </tr>
         </thead>
         <tbody>
             <!-- Placeholder row for cloning -->
             <tr id="dependentRowTemplate" style="display: none;">
                 <td><input type="text" name="dependentName[]"></td>
                 <td><input type="text" name="relationship[]"></td>
                 <td><input type="date" name="dependentDOB[]"></td>
                 <td><input type="text" name="dependentSSN[]"></td>
                 <td><input type="text" name="residentStatus[]"></td>
                 <td><input type="number" name="monthsLived[]"></td>
                 <td><input type="text" name="disableIf[]"></td>
                 <td><button type="button" class="removeBtn">Remove</button></td> <!-- Add Remove button -->
             </tr>
