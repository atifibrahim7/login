  <!-- Script -->
 
<script>

     
    document.getElementById('taxYear').setAttribute('max', new Date().getFullYear());

 // Event delegation for Remove button
 document.querySelector('#dependentTable tbody').addEventListener('click', function(event) {
        if (event.target.classList.contains('removeBtn')) {
            event.target.closest('tr').remove();
        }
    });
    document.getElementById('maritalStatus').addEventListener('change', function() {
var dateOfSpouseDeathField = document.getElementById('dateOfSpouseDeathField');
if (this.value === 'Widow(er)') {
    dateOfSpouseDeathField.style.display = 'block';
} else {
    dateOfSpouseDeathField.style.display = 'none';
}
});

document.getElementById('identityProtectionPIN').addEventListener('change', function() {
var pinInput = document.getElementById('pinInput');
if (this.value === 'Yes') {
    pinInput.style.display = 'block';
} else {
    pinInput.style.display = 'none';
}
});


document.getElementById('hasDependents').addEventListener('change', function() {
        var dependentsInfo = document.getElementById('dependentsInfo');
        if (this.value === 'Yes') {
            dependentsInfo.style.display = 'block';
        } else {
            dependentsInfo.style.display = 'none';
        }
    });

    document.getElementById('hasDependents').addEventListener('change', function() {
        var dependentTable = document.getElementById('dependentTable');
        if (this.value === 'Yes') {
            dependentTable.style.display = 'block';
        } else {
            dependentTable.style.display = 'none';
        }
    });

    document.getElementById('addDependentBtn').addEventListener('click', function() {
        var dependentRowTemplate = document.getElementById('dependentRowTemplate');
        var dependentTableBody = document.querySelector('#dependentTable tbody');
        var newRow = dependentRowTemplate.cloneNode(true);
        newRow.removeAttribute('id');
        newRow.style.display = 'table-row';
        dependentTableBody.appendChild(newRow);
    });


    document.getElementById('hasDependents').addEventListener('change', function() {
        var dependentTable = document.getElementById('dependentTable');
        var addDependentBtn = document.getElementById('addDependentBtn');
        if (this.value === 'Yes') {
            dependentTable.style.display = 'block';
            addDependentBtn.style.display = 'block';
        } else {
            dependentTable.style.display = 'none';
            addDependentBtn.style.display = 'none';
        }
    });

    document.getElementById('addDependentBtn').addEventListener('click', function() {
        var dependentRowTemplate = document.getElementById('dependentRowTemplate');
        var dependentTableBody = document.querySelector('#dependentTable tbody');
        var newRow = dependentRowTemplate.cloneNode(true);
        newRow.removeAttribute('id');
        newRow.style.display = 'table-row';
        dependentTableBody.appendChild(newRow);
    });
</script>
