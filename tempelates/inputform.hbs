    <div>
        <table>
            <tr>
                <td><input type="checkbox" id="rentalIncome" name="rentalIncome"></td>
                <td><label for="rentalIncome">Rental Income</label></td>
                <td><input type="checkbox" id="royalties" name="royalties"></td>
